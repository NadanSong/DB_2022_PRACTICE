WITH RECURSIVE TABLE1 AS(
SELECT 1 날짜
UNION ALL
SELECT 날짜+1 FROM TABLE1 WHERE 날짜<30)
SELECT 날짜, IFNULL(COUNT(DAY(SCHE_DATE)),0) AS 경기횟수
FROM TABLE1 LEFT JOIN (SELECT SCHE_DATE
                      FROM KL_SCHEDULE
                      WHERE YEAR(SCHE_DATE) = 2012 AND MONTH(SCHE_DATE) = 4 AND
                       DAY(SCHE_DATE)<31 AND GUBUN = 'Y') S
ON 날짜 = DAY(SCHE_DATE)
GROUP BY 날짜
ORDER BY 날짜 ASC;
